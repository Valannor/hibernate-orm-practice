<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.practice.hibernate.entity.Project" table="PROJECT">
        <id name="id" type="java.lang.Long">
            <column name="ID"/>
            <generator class="identity"/>
        </id>
        <property name="title" type="string">
            <column name="TITLE" length="255" not-null="true"/>
        </property>
        <set name="employees" table="EMPL_PROJ" inverse="false" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="PROJECT_ID" not-null="true"/>
            </key>
            <many-to-many entity-name="com.practice.hibernate.entity.Employee">
                <column name="EMPLOYEE_ID" not-null="true"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>